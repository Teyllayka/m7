{
    "builds": [
        {
            "src": "mysite/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.8",
                "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
            }
        }
    ],
    "routes": [
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "mysite/wsgi.py" }
    ]
}
